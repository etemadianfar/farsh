<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/colorPrimary"
    android:orientation="vertical">


    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/num"
        android:layout_alignParentEnd="true"
        android:fontFamily="@raw/font"
        android:text="لیست شعب:"
        android:textColor="@color/colorPrimaryD"
        android:textSize="30dp"
        tools:ignore="MissingConstraints"
        android:layout_marginTop="20dp"
        android:layout_marginRight="5dp"
        tools:layout_editor_absoluteX="225dp"
        tools:layout_editor_absoluteY="16dp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/num"
        android:layout_alignParentEnd="true"
        android:fontFamily="@raw/font"
        android:text="شعبه یک: خیابان علامه"
        android:textColor="@color/colorPrimaryD"
        android:textSize="20dp"
        tools:ignore="MissingConstraints"
        android:layout_marginTop="20dp"
        android:layout_marginRight="15dp"
        tools:layout_editor_absoluteX="225dp"
        tools:layout_editor_absoluteY="16dp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/num"
        android:layout_alignParentEnd="true"
        android:fontFamily="@raw/font"
        android:text="شعبه دو: خیابان شهید کلاهدوز"
        android:textColor="@color/colorPrimaryD"
        android:textSize="20dp"
        tools:ignore="MissingConstraints"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        tools:layout_editor_absoluteX="225dp"
        tools:layout_editor_absoluteY="16dp" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/num"
        android:layout_alignParentEnd="true"
        android:fontFamily="@raw/font"
        android:text="شعبه سه: خیابان کیانمهر"
        android:textColor="@color/colorPrimaryD"
        android:textSize="20dp"
        tools:ignore="MissingConstraints"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        tools:layout_editor_absoluteX="225dp"
        tools:layout_editor_absoluteY="16dp" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_gravity="center_horizontal"
        app:srcCompat="@drawable/map"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="5dp"
        tools:layout_editor_absoluteY="104dp" />

</LinearLayout>