<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".search"
    android:background="@color/colorPrimary">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="30dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/add_b"
                style="@style/Base.Widget.AppCompat.Button.Colored"
                android:layout_width="match_parent"
                android:layout_height="61dp"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/button"
                android:layout_weight="1"
                android:fontFamily="@raw/font"
                android:text="افزودن نقشه"
                android:textColor="#42a1ef"
                android:textSize="25dp" />

            <Button
                android:id="@+id/select_b"
                style="@style/Base.Widget.AppCompat.Button.Colored"
                android:layout_width="match_parent"
                android:layout_height="61dp"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/button"
                android:layout_weight="1"
                android:fontFamily="@raw/font"
                android:text="انتخاب نقشه"
                android:textColor="#42a1ef"
                android:textSize="25dp" />
        </LinearLayout>

        <Button
            android:id="@+id/search_b"
            style="@style/Base.Widget.AppCompat.Button.Colored"
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/button"
            android:layout_weight="1"
            android:fontFamily="@raw/font"
            android:text="شروع مقایسه"
            android:textColor="#42a1ef"
            android:textSize="25dp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="94dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        app:srcCompat="@drawable/back2" />

    <ImageView
        android:id="@+id/main"
        android:layout_width="97dp"
        android:layout_height="130dp"
        android:layout_above="@+id/ll"
        android:layout_marginBottom="40dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="31dp"
        app:srcCompat="@mipmap/ic_launcher" />

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/logo"
        android:layout_marginBottom="105dp"
        android:orientation="horizontal">


        <View
            android:layout_width="5dp"
            android:layout_height="10dp"
            android:layout_weight=".1" />

        <ImageView
            android:id="@+id/first"
            android:layout_width="97dp"
            android:layout_height="130dp"
            android:layout_weight="1"
            app:srcCompat="@mipmap/ic_launcher" />

        <View
            android:layout_width="5dp"
            android:layout_height="10dp"
            android:layout_weight=".1" />

        <ImageView
            android:id="@+id/second"
            android:layout_width="97dp"
            android:layout_height="130dp"
            android:layout_weight="1"
            app:srcCompat="@mipmap/ic_launcher" />

        <View
            android:layout_width="5dp"
            android:layout_height="10dp"
            android:layout_weight=".1" />

        <ImageView
            android:id="@+id/third"
            android:layout_width="97dp"
            android:layout_height="130dp"
            android:layout_weight="1"
            app:srcCompat="@mipmap/ic_launcher" />

        <View
            android:layout_width="5dp"
            android:layout_height="10dp"
            android:layout_weight=".1" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="30dp"
        android:layout_above="@id/num"
        android:layout_marginBottom="10dp"
        android:fontFamily="@raw/font"
        android:text="تعداد نقشه های بارگزاری شده:"
        android:textColor="@color/colorPrimaryD"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/num"
        android:layout_width="56dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="88dp"
        android:fontFamily="@raw/font"
        android:layout_above="@id/ll"
        android:layout_marginBottom="60dp"
        android:gravity="center"
        android:text="0"
        android:textColor="@color/colorPrimaryD"
        android:textSize="40dp" />

</RelativeLayout>