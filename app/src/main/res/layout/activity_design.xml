<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    tools:context=".design">


    <Button
        android:id="@+id/choose"
        style="@style/Base.Widget.AppCompat.Button.Colored"
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:layout_below="@+id/button"
        android:layout_marginTop="15dp"
        android:fontFamily="@raw/font"
        android:text="انتخاب ماتریس"
        android:textColor="#42a1ef"
        android:textSize="25dp" />

    <Button
        android:id="@+id/perform"
        style="@style/Base.Widget.AppCompat.Button.Colored"
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:layout_marginTop="5dp"
        android:fontFamily="@raw/font"
        android:text="اصـــلاح نقشه"
        android:textColor="#42a1ef"
        android:textSize="25dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/colornum"
            android:layout_width="56dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:layout_marginEnd="10dp"
            android:layout_marginLeft="0dp"
            android:fontFamily="@raw/font"
            android:gravity="center"
            android:paddingTop="2dp"
            android:text="0"
            android:textColor="@color/colorPrimaryD"
            android:textSize="40dp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/num"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center_vertical"
            android:fontFamily="@raw/font"
            android:text="تعداد رنگ های مورد نیاز: "
            android:textColor="@color/colorPrimaryD"
            android:textSize="16dp" />

    </LinearLayout>

    <ListView
        android:id="@+id/colors"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>